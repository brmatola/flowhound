{
    "__inputs": [],
    "__requires": [
      {
        "type": "datasource",
        "id": "prometheus",
        "name": "Prometheus",
        "version": "2.0.0"
      }
    ],
    "title": "FlowHound - Top Talkers",
    "panels": [
      {
        "type": "timeseries",
        "title": "Top ${topn} MACs (Total Traffic)",
        "targets": [
          {
            "expr": "topk(${topn}, increase(pmacct_traffic_bytes_total_by_mac[$__range]))",
            "legendFormat": "{{src_mac}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "bytes",
            "min": 0,
            "custom": {
              "drawStyle": "area",
              "fillOpacity": 70,
              "stacking": {
                "mode": "normal"
              }
            }
          },
          "overrides": []
        },
        "gridPos": {
          "h": 9,
          "w": 24,
          "x": 0,
          "y": 0
        }
      },
      {
        "type": "timeseries",
        "title": "Top ${topn} Uploaders",
        "targets": [
          {
            "expr": "topk(${topn}, increase(pmacct_traffic_bytes_total_upload_by_src_ip[$__range]))",
            "legendFormat": "{{src_ip}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "bytes",
            "min": 0,
            "custom": {
              "drawStyle": "area",
              "fillOpacity": 70,
              "stacking": {
                "mode": "normal"
              }
            }
          },
          "overrides": []
        },
        "gridPos": {
          "h": 9,
          "w": 24,
          "x": 0,
          "y": 9
        }
      },
      {
        "type": "timeseries",
        "title": "Top ${topn} Downloaders",
        "targets": [
          {
            "expr": "topk(${topn}, increase(pmacct_traffic_bytes_total_download_by_dst_ip[$__range]))",
            "legendFormat": "{{dst_ip}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "bytes",
            "min": 0,
            "custom": {
              "drawStyle": "area",
              "fillOpacity": 70,
              "stacking": {
                "mode": "normal"
              }
            }
          },
          "overrides": []
        },
        "gridPos": {
          "h": 9,
          "w": 24,
          "x": 0,
          "y": 18
        }
      }
    ],
    "templating": {
      "list": [
        {
          "name": "topn",
          "type": "custom",
          "label": "Top N",
          "query": "5,10,15,20,25,50,100",
          "current": {
            "text": "10",
            "value": "10"
          }
        }
      ]
    },
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": [
        "5s",
        "10s",
        "30s",
        "1m",
        "5m",
        "15m",
        "30m",
        "1h",
        "2h",
        "1d"
      ]
    },
    "schemaVersion": 36,
    "version": 1
  }
  